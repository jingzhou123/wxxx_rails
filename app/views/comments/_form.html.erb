<%= form_for([@article, @article.comments.build]) do |f| %>
  <%= f.hidden_field :parent_id, value: parent_id %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
